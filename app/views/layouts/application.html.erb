<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
    <% if flash[:notice] %>
    <%= stylesheet_link_tag "application", :media => "all" %>
      <div class="notice">
          <%= notice %>
      </div>
    <% end %>
    
    <%= yield %>
    
  </body>
</html>
